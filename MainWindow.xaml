<Window x:Class="ChatAppGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatAppGUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="EntryBox" Margin="10,0,90,10" TextWrapping="Wrap" TextChanged="TextBox_TextChanged" Height="23" VerticalAlignment="Bottom"/>
        <Button Content="Button" Margin="0,0,10,10" Click="Button_Click" HorizontalAlignment="Right" Width="75" Height="23" VerticalAlignment="Bottom" IsDefault="True"/>
        <Button x:Name="QuitButton" Content="Quit" Margin="0,10,10,0" VerticalAlignment="Top" Click="QuitButton_Click" HorizontalAlignment="Right" Width="75"/>
        <ListView x:Name="messagesWindow" Margin="10,10,90,47">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>
